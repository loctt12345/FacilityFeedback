@page
@model FacilityFeedback.RazorPage.Pages.DevicePage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-7">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Detail Device</h6>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.DeviceCode, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Device.DeviceCode, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.Manufacture, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Device.Manufacture, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.Description, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Device.Description, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.ExpiredDay, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.EditorFor(m => m.Device.ExpiredDay, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.Status, new {@class = "pt-0 col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.Device.Status, new {@class = "form-check-input", @disabled = "true" })
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Device.DeviceType, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @if (Model.Device.DeviceType != null)
                            @Html.TextBoxFor(m => m.Device.DeviceType.Name, new {@class = "form-control", @disabled = "true"})
                        else
                            @Html.Display("", new {@class = "form-control", @disabled = "true"})

                    </div>
                </div>

                <div class="row mb-3">
                     @Html.LabelFor(m => m.Device.Room, new {@class = "col-sm-2 col-form-label"})
                     <div class="col-sm-10">
                        @if (Model.Device.Room != null)
                            @Html.TextBoxFor(m => m.Device.Room.RoomCode, new {@class = "form-control", @disabled = "true"})
                        else
                            @Html.Display("", new {@class = "form-control", @disabled = "true"})
                     </div>
                </div>

                    <div style="margin-top: 20px;">
                        <a asp-page="./Edit" asp-route-id="@Model.Device?.Id">Edit</a> |
                        <a asp-page="./Index">Back to List</a>
                    </div>
             </div>
        </div>
    </div>
</div>

@page
@model FacilityFeedback.RazorPage.Pages.Login.IndexModel
@{
    Layout = null;
}
<html>
    <head>
    <link href="../css/loginStyle.css" rel="stylesheet">
    </head>
    <body>

    <section>
        <div class="main-form-container">
            <div id="form_section" class="form-container">
                <form class="login-form form-wraper" method="post">
                    <div>
                        <div class="form-title">
                            <h2>Login</h2>
                        </div>
                        <div class="input-group">
                            <div class="box">
                                <span>
                                    <input asp-for="@Model.Account.Email" placeholder="Email" class="myInput" type="text" />
                                </span>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="box">
                                <span>
                                    <input asp-for="@Model.Account.Password" placeholder="Password" class="myInput" type="text" />
                                </span>
                            </div>
                        </div>
                        <div class="forget-password">
                            <a href="">FORGOT PASSWORD</a>
                        </div>
                        <div class="action-button">
                            <button>Login</button>
                        </div>
                    </div>
                </form>
                <div class="signUp-form form-wraper">
                    <div>
                        <div class="form-title">
                            <h2>Sign Up</h2>
                        </div>
                        <div class="input-group">
                            <div class="box">
                                <span>
                                    <input placeholder="Full Name" class="myInput" type="text" />
                                </span>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="box">
                                <span>
                                    <input placeholder="Email" class="myInput" type="text" />
                                </span>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="box">
                                <span>
                                    <input placeholder="Mobile No." class="myInput" type="number" />
                                </span>
                            </div>
                        </div>
                        <div style="margin-bottom: 0px;" class="input-group">
                            <div class="box">
                                <span>
                                    <input placeholder="Password" class="myInput" type="password" />
                                </span>
                            </div>
                        </div>
                        <div class="action-button">
                            <button>Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="multiple-btn" class="bg-btn-container">
                <div class="action-button">
                    <button>Login</button>
                </div>
                <div class="action-button">
                    <button>Sign Up</button>
                </div>
            </div>

        </div>
    </section>

    <script src="../js/Login/login.js"></script>
    </body>
</html>

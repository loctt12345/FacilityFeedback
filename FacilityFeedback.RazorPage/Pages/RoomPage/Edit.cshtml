@page
@model FacilityFeedback.RazorPage.Pages.RoomPage.EditModel

@{
    ViewData["Title"] = "Edit";
    var floorSelectList = (SelectList)ViewBag.FloorId;
    var roomTypeSelectList = (SelectList)ViewBag.roomTypeId;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-7">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Edit Room Type</h6>
                <form method="post">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Room.Id, new {@hidden = "true"})

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Room.RoomCode, new {@class = "col-sm-2 col-form-label"})
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Room.RoomCode, new {@class = "form-control"})
                        </div>
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Room.Status, new {@class = "pt-0 col-sm-2 col-form-label"})
                        <div class="col-sm-10">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.Room.Status, new {@class = "form-check-input"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.Room.Floor, new {@class = "col-sm-2 col-form-label"})
                    </div>
                    @Html.DropDownListFor(m => m.Room.FloorId, floorSelectList, new {@class="form-select mb-3"})

                    <div class="row">
                        @Html.LabelFor(m => m.Room.RoomType, new {@class = "col-sm-2 col-form-label"})
                    </div>
                    @Html.DropDownListFor(m => m.Room.RoomTypeId, roomTypeSelectList, new {@class="form-select mb-3"})

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>

                <div style="margin-top: 20px;">
                    <a asp-page="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

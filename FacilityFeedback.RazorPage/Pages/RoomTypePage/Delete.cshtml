@page
@model FacilityFeedback.RazorPage.Pages.RoomTypePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-7">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Delete Room Type</h6>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.RoomType.RoomCode, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.RoomType.RoomCode, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.RoomType.Description, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.RoomType.Description, new {@class = "form-control", @disabled = "true" })
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.RoomType.Status, new {@class = "pt-0 col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.RoomType.Status, new {@class = "form-check-input", @disabled = "true"})
                        </div>
                    </div>
                </div>

                <form method="post">
                    @Html.TextBoxFor(m => m.RoomType.Id, new {@hidden = "true"})
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <div style="margin-top: 20px;">
                    <a asp-page="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@model FacilityFeedback.RazorPage.Pages.AccountPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-7">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Detail Device</h6>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.Account.Email, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Account.Email, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.Account.Name, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Account.Name, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.Account.PhoneNumber, new {@class = "col-sm-2 col-form-label"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Account.PhoneNumber, new {@class = "form-control", @disabled = "true"})
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <a asp-page="./Edit" asp-route-email="@Model.Account?.Email">Edit</a> |
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

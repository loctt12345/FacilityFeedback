@page
@model FacilityFeedback.RazorPage.Pages.AccountPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-7">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update account</h6>
                <form method="post">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Account.Email, new {@class = "col-sm-3 col-form-label"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Account.Email, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Account.Name, new {@class = "col-sm-3 col-form-label"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Account.Name, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Account.PhoneNumber, new {@class = "col-sm-3 col-form-label"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Account.PhoneNumber, new {@class = "form-control"})
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>

                <div style="margin-top: 20px;">
                    <a asp-page="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
